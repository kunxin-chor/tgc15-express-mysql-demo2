{{#extends 'base'}}

{{#block 'content'}}
<form method="POST">
    <h1>Deleting Actor: {{actor.first_name}} {{actor.last_name}}</h1>
    <div class="alert alert-danger">
        Are you sure you want to delete this actor?
        <div>
            <input type="submit" value="Confirm" class="btn btn-danger"/>
            <a href="/actors" class="btn btn-success">Cancel</a>
        </div>
    </div>
</form>

{{/block}}

{{/extends}}